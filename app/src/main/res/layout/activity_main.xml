<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard Menu"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:background="@color/pastel_lightgreen"
                />

            <!--   Card View 1   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginRight="15dp"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/bakso"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/bakso"
                            android:background="@drawable/bg_card"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bakso"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingVertical="8dp"
                            android:background="@color/bg_text"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="5dp"
                    android:padding="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/mie_ayam"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/mie_ayam"
                            android:background="@drawable/bg_card"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mie Ayam"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingVertical="8dp"
                            android:background="@color/bg_text"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--   Card View 2   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginRight="15dp"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/rawon"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/rawon"
                            android:background="@drawable/bg_card"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rawon"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingVertical="8dp"
                            android:background="@color/bg_text"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="5dp"
                    android:padding="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/soto_ayam"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/soto"
                            android:background="@drawable/bg_card"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Soto Ayam"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingVertical="8dp"
                            android:background="@color/bg_text"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--   Card View 3   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginRight="15dp"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/coto_makassar"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/coto_makassar"
                            android:background="@drawable/bg_card"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Coto Makassar"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingVertical="8dp"
                            android:background="@color/bg_text"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="5dp"
                    android:padding="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/sop_iga"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/sop_iga"
                            android:background="@drawable/bg_card"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sop Iga"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingVertical="8dp"
                            android:background="@color/bg_text"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--   Card View 4   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:paddingBottom="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginRight="15dp"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/bubur_ayam"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/bg_card"
                            android:padding="10dp"
                            android:src="@drawable/bubur_ayam" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bubur Ayam"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingVertical="8dp"
                            android:background="@color/bg_text"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="5dp"
                    android:padding="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/soto_betawi"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/soto_betawi"
                            android:background="@drawable/bg_card"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Soto Betawi"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingVertical="8dp"
                            android:background="@color/bg_text"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>